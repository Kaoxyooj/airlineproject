<Window x:Class="Airline.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airline"
        mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="754">
    <Grid x:Name="SmallFlight">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFEEF9FD" Offset="0.136"/>
                <GradientStop Color="#FF49CDFF" Offset="0.607"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="button_f1001" HorizontalAlignment="Left" Margin="23,39,0,0" VerticalAlignment="Top" Width="97" Click="button_f1001_Click" Cursor="Hand" BorderBrush="RoyalBlue" FontFamily="Segoe UI Semibold" Background="White" BorderThickness="2" Height="20">
            <Button.Content>
                <Grid>
                    <Image Source="airplane.png" RenderTransformOrigin="2.484,0.602" Margin="-36,-3,32,-5.6" Width="36" Height="23" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                    <TextBlock Text="Flight-1001" RenderTransformOrigin="0.534,0.398" Margin="0,-2,-28,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="60"/>
                </Grid>
            </Button.Content>
        </Button>

        <Button x:Name="button_f1001_sell" Content="Sell Tickets" HorizontalAlignment="Left" Margin="131,38,0,0" VerticalAlignment="Top" Width="75" Click="button_f1001_sell_Click" Cursor="Hand" BorderBrush="#FF49CDFF" Height="20">
