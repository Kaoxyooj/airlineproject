            </Button.Background>
        </Button>
        <TextBox x:Name="textBoxf1000" HorizontalAlignment="Left" Height="130" Margin="224,15,0,0" TextWrapping="Wrap" Text="Flight Information" VerticalAlignment="Top" Width="500" BorderBrush="Black" BorderThickness="2" FontFamily="Segoe UI Light" FontSize="13.333" FontWeight="Bold">
